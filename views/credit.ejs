<%- include("header"); -%>
<nav class="navbar navbar-expand-sm ">
  <div class="container">
      <p class="navbar-brand" style="color: white;">CREDIT</p>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a class="nav-link" href="/">HOME</a></li>
        <li class="nav-item"><a class="nav-link" href="/credit/add">ADD</a></li>
      </ul>
  </div>
</nav>

<div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Amount</th>
        <th scope="col">Day</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      
        <%  details_in_ejs.forEach(function(i){ %>
            <tr>
              <td> <%=i.name %></td>
              <td> <%=i.amount %></td>
              <td><%= i.date %></td>
              <td><a  href="/credit/edit/<%=i.id %>">Edit</a> </td>
              <td><a  href="/credit/delete/<%=i.id %>">Delete</a> </td>
            </tr>
         <%  }) %>
    </tbody>
  </table>
</div>



